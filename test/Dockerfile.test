# Dockerfile.test
FROM node:18-bullseye

# نصب ابزارهای سیستمی مورد نیاز تست‌ها
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    docker.io \
    netcat \
    iputils-ping \
    jq && \
    rm -rf /var/lib/apt/lists/*

# ست کردن دایرکتوری کار
WORKDIR /app

# اضافه کردن start script
RUN echo '#!/bin/bash\n\
    set -e\n\
    echo "📦 Installing dependencies..."\n\
    cd /app\n\
    \n\
    # نصب dependencies chaincode\n\
    if [ -d "chaincode" ] && [ -f "chaincode/package.json" ]; then\n\
    echo "Installing chaincode dependencies..."\n\
    npm install --prefix chaincode --no-audit --no-fund\n\
    fi\n\
    \n\
    # نصب dependencies تست integration\n\
    if [ -d "test/integration" ] && [ -f "test/integration/package.json" ]; then\n\
    echo "Installing integration test dependencies..."\n\
    npm install --prefix test/integration --no-audit --no-fund\n\
    fi\n\
    \n\
    # نصب dependencies اصلی اگر package.json وجود دارد\n\
    if [ -f "package.json" ]; then\n\
    echo "Installing main dependencies..."\n\
    npm install --no-audit --no-fund\n\
    fi\n\
    \n\
    echo "⏳ Waiting for chaincode deployment..."\n\
    sleep 30\n\
    \n\
    echo "🧪 Running tests..."\n\
    npm test --prefix test/integration || npm test\n\
    echo "✅ Tests completed!"\n' > /start.sh && \
    chmod +x /start.sh

# Default command
CMD ["/start.sh"]
