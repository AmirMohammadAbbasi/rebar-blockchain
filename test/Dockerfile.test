# Dockerfile.test
FROM node:18-bullseye

# نصب ابزارهای سیستمی مورد نیاز تست‌ها
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    docker.io \
    netcat \
    iputils-ping \
    jq && \
    rm -rf /var/lib/apt/lists/*

# ست کردن دایرکتوری کار
WORKDIR /app

# اضافه کردن start script
RUN echo '#!/bin/bash\n\
    set -e\n\
    echo "📦 Installing dependencies..."\n\
    cd /app\n\
    \n\
    # نصب dependencies chaincode\n\
    if [ -d "chaincode" ] && [ -f "chaincode/package.json" ]; then\n\
    echo "Installing chaincode dependencies..."\n\
    npm install --prefix chaincode --no-audit --no-fund\n\
    fi\n\
    \n\
    # نصب dependencies تست - مسیر درست\n\
    if [ -d "test" ] && [ -f "test/package.json" ]; then\n\
    echo "Installing test dependencies..."\n\
    npm install --prefix test --no-audit --no-fund\n\
    fi\n\
    \n\
    # نصب dependencies اصلی اگر package.json وجود دارد\n\
    if [ -f "package.json" ]; then\n\
    echo "Installing main dependencies..."\n\
    npm install --no-audit --no-fund\n\
    fi\n\
    \n\
    echo "⏳ Waiting for network and chaincode deployment..."\n\
    sleep 45\n\
    \n\
    echo "🧪 Running tests..."\n\
    # چک کن که کدام package.json موجود است و از آن استفاده کن\n\
    if [ -f "test/package.json" ]; then\n\
    echo "Running tests from test directory..."\n\
    cd test && npm test\n\
    elif [ -f "package.json" ]; then\n\
    echo "Running tests from main directory..."\n\
    npm test\n\
    else\n\
    echo "❌ No package.json found for tests!"\n\
    exit 1\n\
    fi\n\
    echo "✅ Tests completed!"\n' > /start.sh && \
    chmod +x /start.sh

# Default command
CMD ["/start.sh"]
